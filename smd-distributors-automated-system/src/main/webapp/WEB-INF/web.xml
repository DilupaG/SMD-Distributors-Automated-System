  <!--  insert feedback -->
		<servlet>
			<servlet-name>AddFeedback</servlet-name>
			<servlet-class>com.smd.servlet.AddFeedbackServlet</servlet-class> <!-- match the servlet -->
		</servlet>
		
		<servlet-mapping> <!-- path to the servlet -->
		 	<servlet-name>AddFeedback</servlet-name>
		 	<url-pattern>/addfeedback</url-pattern> <!-- action to the feedback insert form -->
		 </servlet-mapping>
		  
		  <!-- view feedback -->
		 <servlet>
			<servlet-name>ViewFeedback</servlet-name>
			<servlet-class>com.smd.servlet.ViewFeedbackServlet</servlet-class> <!-- match the servlet -->
		</servlet>
		
		<servlet-mapping> <!-- path to the servlet -->
		 	<servlet-name>ViewFeedback</servlet-name>
		 	<url-pattern>/view</url-pattern> <!-- action to the view form -->
		 </servlet-mapping>
		 
		 <!-- update feedback -->
		 <servlet>
			<servlet-name>UpdateFeedback</servlet-name>
			<servlet-class>com.smd.servlet.UpdateFeedbackServlet</servlet-class> <!-- match the servlet -->
		</servlet>

		<servlet-mapping> <!-- path to the servlet -->
			<servlet-name>UpdateFeedback</servlet-name>
			<url-pattern>/update</url-pattern> <!-- action to the update form -->
		</servlet-mapping>
		
		<!-- delete feedback -->
		 <servlet>
			<servlet-name>DeleteFeedback</servlet-name>
			<servlet-class>com.smd.servlet.DeleteFeedbackServlet</servlet-class> <!-- match the servlet -->
		</servlet>

		<servlet-mapping> <!-- path to the servlet -->
			<servlet-name>DeleteFeedback</servlet-name>
			<url-pattern>/delete</url-pattern> <!-- action to the delete form -->
		</servlet-mapping>

         
